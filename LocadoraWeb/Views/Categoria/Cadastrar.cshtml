@model LocadoraWeb.Models.Categoria

@{
    ViewData["Title"] = "Cadastrar Categoria";
}

<form asp-action="Cadastrar" asp-controller="Categoria" method="post"
      enctype="multipart/form-data">
    @*<form asp-action="Cadastrar">*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend>Cadastrar Categoria</legend>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="valorDiaria" class="control-label"></label>
            <input asp-for="valorDiaria" class="form-control" />
            <span asp-validation-for="valorDiaria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        @*<div class="form-group">
                <label asp-for="CriadoEm" class="control-label"></label>
                <input asp-for="CriadoEm" class="form-control" />
                <span asp-validation-for="CriadoEm" class="text-danger"></span>
            </div>*@
    </fieldset>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-success" />
    </div>
</form>

