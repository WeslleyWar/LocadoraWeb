@model Veiculo

<form asp-action="Cadastrar" asp-controller="Veiculo" method="post" 
      enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar veículo</legend>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Marca">Marca:</label>
            <input class="form-control" asp-for="Marca" type="text" placeholder="Marca do Veículo" />
            <span class="text-danger" asp-validation-for="Marca"></span>
        </div>
        <div class="form-group">
            <label asp-for="Modelo">Modelo:</label>
            <input class="form-control" asp-for="Modelo" type="text" placeholder="Modelo do Veículo" />
            <span class="text-danger" asp-validation-for="Modelo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Placa">Placa:</label>
            <input class="form-control" asp-for="Placa" type="text" placeholder="Placa do Veículo" />
            <span class="text-danger" asp-validation-for="Placa"></span>
        </div>
        <div class="form-group">
            <label asp-for="Renavan">Renavan:</label>
            <input class="form-control" asp-for="Renavan" type="text" placeholder="Renavan do Veículo" />
            <span class="text-danger" asp-validation-for="Renavan"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cor">Cor:</label>
            <input class="form-control" asp-for="Cor" type="text" placeholder="Cor do Veículo" />
        </div>
        <div class="form-group">
            <label asp-for="Ano">Ano:</label>
            <input class="form-control" asp-for="Ano" type="text" placeholder="Ano do Veículo" />
        </div>
        <div class="form-group">
            <label asp-for="TipoCombustivel">Tipo Combustivel:</label>
            <input class="form-control" asp-for="TipoCombustivel" type="text" placeholder="Combustivel do Veículo" />
            <span class="text-danger" asp-validation-for="TipoCombustivel"></span>
        </div>
        @*<div class="form-group">
            <label asp-for="TipoCategoria">Categoria Veiculo:</label>
            <input class="form-control" asp-for="TipoCategoria" type="text" placeholder="Categoria do Veículo" />
            <span class="text-danger" asp-validation-for="TipoCategoria"></span>
        </div>*@
        <div class="form-group">
            <label asp-for="QntdPortas">Quantidade Portas:</label>
            <input class="form-control" asp-for="QntdPortas" type="text" placeholder="Qntd. portas do Veículo" />
        </div>
        <div class="form-group">
            <label asp-for="Potencia">Potência:</label>
            <input class="form-control" asp-for="Potencia" type="text" placeholder="Potência do Veículo" />
        </div>
        <div class="form-group">
            <label asp-for="Imagem">Imagem:</label>
            <input class="form-control" type="file" name="file" />
        </div>
        <div class="form-group">
            <label asp-for="Categoria">Categoria:</label>
            <select asp-items="@ViewBag.Categorias" class="form-control" asp-for="CategoriaId">
                <option>  -- SELECIONE -- </option>
            </select>
        </div>
        <input type="submit" class="btn btn-success" value="Cadastrar" />
    </fieldset>
</form>
